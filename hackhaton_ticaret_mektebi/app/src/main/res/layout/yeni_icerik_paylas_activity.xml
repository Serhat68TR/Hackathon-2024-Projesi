<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yeni_icerik_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/yeni_icerik_linear_l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/yeni_icerik_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yeni_icerik_pp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ogrenci" />

            <TextView
                android:id="@+id/yeni_icerik_ad_soyad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Serhat KAYA"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/yeni_icerik_yapay_zeka"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/yeni_icerik_icerik_detay_card"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/yeni_icerik_linear_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/yeni_icerik_icerigin_adi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yeni_icerik_icerigin_adi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İÇERİĞİN ADI :" />

                    <EditText
                        android:id="@+id/yeni_icerik_icerigin_adi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Yazınız"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yeni_icerik_paylasan_kisi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yeni_icerik_paylasan_kisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYLAŞAN KİŞİ :" />

                    <TextView
                        android:id="@+id/yeni_icerik_paylasan_kisi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="A" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yeni_icerik_paylasilan_tarih_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yeni_icerik_paylasilan_tarih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PAYLAŞILAN TARİH :" />

                    <EditText
                        android:id="@+id/yeni_icerik_paylasilan_tarih_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01-12-2024" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yeni_icerik_icerik_bolum_adi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yeni_icerik_icerik_bolum_adi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İÇERİK BÖLÜM ADI :" />

                    <EditText
                        android:id="@+id/yeni_icerik_icerik_bolum_adi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:text="BİLGİSAYAR PROGRAMCILIĞI" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yeni_icerik_icerik_sayfa_boyut_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yeni_icerik_icerik_sayfa_boyut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İÇERİK SAYFA SAYISI/BOYUTU :" />

                    <TextView
                        android:id="@+id/yeni_icerik_icerik_sayfa_boyut_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/yeni_icerik_paylas_dosyaSec"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Dosya Seç" />
                    <!-- Boş alan bırakmak için View -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/yeni_icerik_paylas_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:scrollIndicators="right"
                        android:text="Paylaş" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lütfen Tarih ve Saat Bilgilerini Belirtilen Formatta Giriniz." />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>