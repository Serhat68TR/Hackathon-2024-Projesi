<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/icerik_detay_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icerik_detay_pp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ogrenci" />

            <TextView
                android:id="@+id/icerik_detay_ad_soyad_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Serhat KAYA"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/icerik_detay_card"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/icerigin_adi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/icerigin_adi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İÇERİĞİN ADI :" />

                    <TextView
                        android:id="@+id/icerigin_adi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yapay Zeka Ders Notları" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paylasan_kisi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paylasan_kisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYLAŞAN KİŞİ :" />

                    <TextView
                        android:id="@+id/paylasan_kisi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Serhat Kaya" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paylasilan_tarih_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paylasilan_tarih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PAYLAŞILAN TARİH :" />

                    <TextView
                        android:id="@+id/paylasilan_tarih_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="23-10-2024" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icerik_bolum_adi_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/icerik_bolum_adi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İÇERİK BÖLÜM ADI :" />

                    <TextView
                        android:id="@+id/icerik_bolum_adi_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bilgisayar Mühendisliği" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icerik_sayfa_boyut_linear_h"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/icerik_sayfa_boyut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="İÇERİK SAYFA SAYISI/BOYUTU :" />

                    <TextView
                        android:id="@+id/icerik_sayfa_boyut_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="22 Sayfa - 10MB" />
                </LinearLayout>

                <Button
                    android:id="@+id/icerigi_indir_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4169E1"
                    android:layout_gravity="center"
                    android:text="İçeriği İndir" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>